    ci = commit
    co = checkout
    cob = checkout -b
    b = branch
    br = branch -r
    a = add
    m = merge --no-commit --no-ff
    mom = merge origin master
    f = fetch
    rs = reset
    rsh = reset --hard
    rss = reset --soft
    rb = rebase
